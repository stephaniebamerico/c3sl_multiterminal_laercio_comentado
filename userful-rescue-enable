#!/bin/bash
if [ "$UID" -ne 0 ]
then
    "Este comando deve ser executado como root!"
    exit 1
fi
read -r -p "O computador ir√° desligar automaticamente. Deseja continuar? [s/N] " response
response=${response,,}
if [[ "$response" =~ ^(sim|s)$ ]]
then
    systemctl enable userful-rescue-nextboot-reboot.service
    systemctl enable userful-rescue-nextboot-read-write.service
    systemctl start userful-rescue-nextboot-read-write.service
    systemctl poweroff
fi
